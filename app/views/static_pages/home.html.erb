<div class="row">
    		<aside class="col-md-4">
 			<section class="user_info">
        <%= render 'shared/user_info' %>
      </section> 
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
   


   <div class="col-md-8">
  


					<ul class="users">
					 
					      
					      <% @microposts.each do |micropost| %>
										<li id="micropost-<%= micropost.id %>">
										  <span class="user">Posted by: <%= link_to micropost.user.name, micropost.user %></span><br>
										  <span class="tag"><%= micropost.tag %></span><br>
										  <span class="content">
										  	<%= image_tag micropost.picture.url if micropost.picture? %><br/>
										  	<%= link_to "Download Attachment", micropost.attachment_url if micropost.attachment? %>	<br/>	
										  	<%= micropost.content %><br/>
										  </span>
										  <span class="timestamp">
										    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
										
										  <% if current_user?(micropost.user) %>
										      <%= link_to "delete", micropost, method: :delete,
										                                       data: { confirm: "You sure?" } %>
										   <% end %>
										  </span>
										</li>
					      <%end%>
					
					    
					</ul>

			<%= will_paginate @microposts %>








    </div>
  </div>







 








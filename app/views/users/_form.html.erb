<%= form_for(@user) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>


  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control', style: ' background: rgba(144, 144, 144, 0.25);border:none;' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control', style: ' background: rgba(144, 144, 144, 0.25);border:none;' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control', style: ' background: rgba(144, 144, 144, 0.25);border:none;' %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: 'form-control', style: ' background: rgba(144, 144, 144, 0.25);border:none;' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary", :style=>"background-color:black;color:white" %>
<% end %>